<h1>Listing records</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Count</th>
      <th>Want</th>
      <th>Discogs</th>
      <th>Title</th>
      <th>Uri</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr style="background-color:<%= cycle('#AAA', '#FFF') %>">
        <td><%= record.rating %></td>
        <td><%= record.count %></td>
        <td><%= record.want %></td>
        <td><%= record.discogs_id %></td>
        <td><%= record.title %></td>
        <td><%= link_to 'Show', record.uri %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

